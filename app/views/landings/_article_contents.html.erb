<% if @articles.present? %>
	<table class="table table-striped table-hover">
		<thead>
			<th>Index</th>
			<th>title</th>
			<th>Summary</th>
		</thead>
		<tbody>
			<% @articles.each_with_index do |article, index| %>
				<tr>
					<td><%= index+1 %>.</div>
					<td><%= link_to article.title, learning_lounge_detail_landing_path(article) %></td>
					<td><%= article.summary.truncate(20).html_safe %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p> No Article present in this list </p>
<% end %>