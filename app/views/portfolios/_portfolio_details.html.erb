<div class="row">
	<div class="col-md-4">
		<span><h2 class="dis_inlne"><%= link_to @active_portfolio.name.titleize, portfolios_path %></h2>(<%= current_user.total_balance %>)</span>
	</div>
</div>

<div class="row">
	<table class="table table-striped table-hover">
		<thead>
			<th>Company</th>
			<th>Quantity Owned</th>
			<th>Price Purchased</th>
			<th>Current Price</th>
		</thead>
		<tbody>
			<% @data.each_with_index do |purchase, index| %>
				<tr>
					<td><%= link_to purchase[:company_name], company_path(purchase[:company_id]) %></td>
					<td><%= purchase[:quantity] %></td>
					<td><%= purchase[:inv_price] %></td>
					<td><%= purchase[:live_price] %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>