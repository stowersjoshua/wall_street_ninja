<% if @portfolios.present? %>
	<table class="table table-striped table-hover">
		<thead>
			<th>
				<strong>Index</strong>
			</th>
			<th>
				<strong>Portfolio Name</strong>
			</th>
			<th>
				<strong>Status</strong>
			</th>
			<th>
				<strong>Total Quantity</strong>
			</th>
			<th>
				<strong>Total Investment</strong>
			</th>
			<th>
				<strong>Action</strong>
			</th>
		</thead>
		<tbody>
			<% @portfolios.each_with_index do |port, index| %>
				<tr>
					<td>
						<%= index+1 %>.
					</td>
					<td>
						<%= port.name.humanize %>
					</td>
					<td>
						<%= port.active %>
					</td>
					<td>
						<%= port.purchases.map(&:quantity).sum if port.purchases.present? %>
					</td>
					<td>
						<%= port.balance %>
					</td>
					<td>
						<%= link_to "Make Active", change_status_portfolio_path(port), remote: true %>  |  
						<%= link_to "Edit", edit_portfolio_path(port) %>  |  
						<%= link_to "Delete", portfolio_path(port), method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>