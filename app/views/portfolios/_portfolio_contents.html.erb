<% if @data.present? %>
	<div class="row">
		<table class="table table-striped table-hover">
			<thead>
				<th>Company</th>
				<th>Current price</th>
				<th>Quantity owned</th>
				<th>Purchased price</th>
				<th>Date purchased</th>
				<th>Overall gain</th>
				<th>Action</th>
			</thead>
			<tbody>
				<% @data.each_with_index do |purchase, index| %>
					<tr>
						<td><%= link_to purchase[:company_name], company_path(purchase[:company_id]) %></td>
						<td><%= purchase[:live_price] %></td>
						<td><%= purchase[:quantity] %></td>
						<td><%= purchase[:inv_price] %></td>
						<td><%= purchase[:inv_date] %></td>
						<td><%= purchase[:overall_gain] %></td>
						<td><%= link_to "Sell", new_company_sale_path(purchase[:company_id], purchase_id: purchase[:purchase_id]), remote: true %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<% end %>