<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Article Details</h1>
		</div>
	</div>
	<div id="article_contents">		
		<% if @article.present? %>
			<h2><%= @article.title %></h2>
			Author: <%= @article.author.try(:titleize) %>
			Date Posted: <%= @article.created_at.strftime("%d/%m/%Y") %>
			Article Text: <%= @article.summary.html_safe %>
		<% end %>
	</div>		
</div>	