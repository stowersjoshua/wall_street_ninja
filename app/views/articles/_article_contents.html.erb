<% if @articles.present? %>
	<table class="table table-striped table-hover">
		<thead>
			<th>Index</th>
			<th>Title</th>
			<th>Author Name</th>
			<th>Date Posted</th>
			<th>Article Text</th>
		</thead>
		<tbody>
			<% @articles.each_with_index do |article, index| %>
				<tr>
					<td><%= index+1 %>.</div>
					<td><%= link_to article.title, article_path(article) %></td>
					<td><%= article.author.try(:titleize) %></td>
					<td><%= article.created_at.strftime("%d/%m/%Y") %></td>
					<td><%= article.summary.truncate(20).html_safe %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p> No Article present in this list </p>
<% end %>