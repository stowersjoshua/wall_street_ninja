<div id="purchaseModel" class="modal fade in custom_modal" tabindex="-1" role="dialog" style="display: block;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close_btn">&times;</button>
        <h4 class="modal-title">Purchase Stock</h4>
      </div>
      <%= simple_form_for(Purchase.new, url: company_purchases_path(@company)) do |f| %>
        <div class="modal-body">
            <div class="row">
              <div class="col-md-4 cmpny_label">
                Company Name
              </div>
              <div class="col-md-8">
                <div class="form-inputs">
                  <%= text_field_tag :company, @company.name, class: "form-control name_fld", readonly: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 cmpny_label">
                Quantity
              </div>
              <div class="col-md-8">
                <div class="form-inputs">
                  <%= f.input :quantity, label: false, prompt: "Select stock quantity" , input_html: {class: "form-control name_fld"} %>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Purchase", class: "btn btn-primary purchase_btn" %>
            <button type="button" class="btn btn-default close_btn">Close</button>
          </div>
        <% end %> 
    </div>
  </div>
</div>