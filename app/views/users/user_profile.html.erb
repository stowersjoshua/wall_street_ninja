<div class="container">
  <%= simple_form_for(@user, url: user_path(@user), method: :put) do |f| %>
    <div class="row">
      <div class="col-md-4 ">&nbsp;</div>
      <div class="col-md-4">
        <h2>User Details</h2>
  			<%= f.error_notification %>
        <div class="form-inputs">
					<%= f.input :first_name, required: true, input_html: {class: "form-control"} %>
				</div>
				<div class="form-inputs">
					<%= f.input :last_name, required: true, input_html: {class: "form-control"} %>
				</div>
				<div class="form-inputs">
          <%= f.input :age, required: true, input_html: {class: "form-control"} %>
        </div>
        <div class="form-inputs">
					<%= f.input :city, required: true, input_html: {class: "form-control"} %>
				</div>
				<div class="form-inputs">
					<%= f.input :state, required: true, input_html: {class: "form-control"} %>
				</div>

        <div class="form-actions">
          <%= f.button :submit, "Save", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>