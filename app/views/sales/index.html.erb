<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h1>Sale You Shares</h1>
		</div>
		<div class="col-md-2">
		</div>
	</div>
	<div id="portfolio_contents">		
		<%#= render "portfolio_contents" %>

		<%= form_tag sale_shares_sales_path do %>
			<%= select_tag :company, options_for_select(@portfolio.companies.map{|c| [c.name, c.id]}), prompt: "Select Company", id: "company_change"%>
			<div id="share_select">
				<%= render "share_select", options: [] %>
			</div>

			<%= submit_tag "Sold" %>
		<%end%> 
	</div>	
</div>		