<% if @companies.present? %>
	<table class="table table-striped table-hover">
		<thead>
			<th>Index</th>
			<th>Company Name</th>
			<th>city</th>
			<th>State</th>
			<th>Description</th>
			<% if current_user.is_standard_user? %>
				<th>Action</th>
			<% end %>
		</thead>
		<tbody>
			<% @companies.each_with_index do |company, index| %>
				<tr>
					<td><%= index+1 %>.</div>
					<td><%= link_to company.name, company_path(company) %></td>
					<td><%= company.city %></td>
					<td><%= company.state %></td>
					<td><%= company.description.truncate(40) %></td>
					<% if current_user.is_standard_user? %>
						<td><%= link_to "Purchase", new_company_purchase_path(company), remote: true %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>