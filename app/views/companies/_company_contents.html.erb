<% if @companies.present? %>
	<table class="table table-striped table-hover">
		<thead>
			<th>Index</th>
			<th>Company Name</th>
			<th>city</th>
			<th>State</th>
			<th>Action</th>
		</thead>
		<tbody>
			<% @companies.each_with_index do |company, index| %>
				<tr>
					<td><%= index+1 %>.</div>
					<td><%= link_to company.name, company_path(company) %></td>
					<td><%= company.city %></td>
					<td><%= company.state %></td>
					<td><%= link_to "Purchase", purchase_company_path(company) %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>