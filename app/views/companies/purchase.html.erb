<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Portfolio</h1>
    </div>
  </div>
  <%= simple_nested_form_for(Purchase.new, url: create_purchase_company_path) do |f| %>
      <div class="row">
        <%= f.input :type, as: :hidden, label: false, input_html: { value: "Purchase", class: 'form-control' } %>
        <%= f.input :company_id, as: :hidden, label: false, input_html: { value: @company.id, class: 'form-control' } %>
        <%= f.input :portfolio_id, as: :hidden, label: false, input_html: { value: @portfolio.id, class: 'form-control' } %>

        <div class="col-md-3">
          <div class="form-group">
            <label>* Company Name</label>
            <%= text_field_tag :company_name, @company.name, class: 'form-control', required: true, disabled: true %>
          </div>
        </div>

        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :price, required: true, label: "Current Price", input_html: { class: 'form-control', id: "current_price", readonly: true, value: @price } %>
          </div>
        </div>

        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :quantity, required: true, label: "Quantity", placeholder: "Enter Quantity",  input_html: { class: 'form-control', id: "purchase_quantity"} %>
          </div>
        </div>  

        <div class="col-md-3">
          <div class="form-group">
            <%= f.input :total_price, required: true, label: "Total Price", placeholder: "Total Price",  input_html: { class: 'form-control', id: "purchase_total_price", readonly: true} %>
          </div>
        </div>
      </div>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.button :submit, "Purchase", class: 'btn btn-primary', data: {disable_with: "Please Wait..."}  %>
        </div>
      </div>
    </div>
  <% end %>
</div>