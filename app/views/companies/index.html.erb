<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h1>Company List</h1>
		</div>
		<div class="col-md-6">
			<%= form_tag("/companies/search", method: :get, remote: true) do %>
				<div class="form-inputs">
          <%= text_field_tag "search", "", placeholder: "Company Name, City Or State", class: "form-control wdt60" %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      <% end %>
		</div>
	</div>
	<div id="company_contents">		
		<%= render "company_contents" %>
	</div>		
</div>		