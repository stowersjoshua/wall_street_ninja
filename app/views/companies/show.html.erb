<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h1><strong><%= @company.name %>(<%= @company_details["data"][0][4] %>)</strong></h1>
		</div>
		<% if current_user.is_standard_user? %>
			<div class="col-md-2">
				<%= link_to "Purchase", new_company_purchase_path(@company), remote: true, class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
	<div id="company_details">		
		<%= render "company_details" %>
	</div>		
</div>		