<%= form_tag("search") do %>
  <div class="form-inputs">
    <%= select_tag "category", options_for_select(User::SEARCH_CATAGORIES, params[:category]), required: true, prompt: "Choose search options", class: "wdt60 mrht6"  %>
    <%= text_field_tag "search", (params[:search].present? ? params[:search] : ""), required: true, placeholder: "Searching text...", class: "wdt60", autocomplete: "off" %>
    <%= submit_tag "Search", class: "btn btn-primary search_btn" %>
  </div>
<% end %>