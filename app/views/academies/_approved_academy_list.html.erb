<%if @academies.present? %>
	<h4><strong>Academy List</strong></h4>(Which have user successfully register.)
	<table class="table table-striped table-hover">
		<thead>
			<th>
				<strong>Index</strong>
			</th>
			<th>
				<strong>Academy Name</strong>
			</th>
			<th>
				<strong>Owner Name</strong>
			</th>
			<th>
				<strong>Moderater Names</strong>
			</th>
			<th>
				<strong>Description</strong>
			</th>
		</thead>
		<tbody>
			<% @academies.each_with_index do |academy, index| %>
				<tr>
					<td>
						<%= index+1 %>.
					</td>
					<td>
						<%= academy.name.humanize %>
					</td>
					<td>
						<%= academy.owner.full_name %>
					</td>
					<td>
						<%= academy.moderatores.map(&:first_name).join(", ") %>
					</td>
					<td>
						<%= academy.description %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<%if @assignments.present? %>
	<h4><strong>Assignment List</strong></h4>
	<table class="table table-striped table-hover">
		<thead>
			<th>
				<strong>Index</strong>
			</th>
			<th>
				<strong>Academy Name</strong>
			</th>
			<th>
				<strong>Assignment Name</strong>
			</th>
			<th>
				<strong>Assignment Type</strong>
			</th>
			<th>
				<strong>Descriptiomn</strong>
			</th>
			<th>
				<strong>Due Date</strong>
			</th>
		</thead>
		<tbody>
			<% @assignments.each_with_index do |assignment, index| %>
				<tr>
					<td>
						<%= index+1 %>.
					</td>
					<td>
						<%= assignment.academy.name.humanize %>
					</td>
					<td>
						<%= assignment.title %>
					</td>
					<td>
						<%= assignment.assignment_type %>
					</td>
					<td>
						<%= assignment.description %>
					</td>
					<td>
						<%= assignment.due_date.strftime("%d/%m/%Y") %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
