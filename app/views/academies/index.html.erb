<div class="row">
	<div class="col-md-10">
		<h2>Welcome to Wall Street Ninja</h2>
	</div>
	<div class="col-md-2">
		<%= link_to "Start a new Academy", new_academy_path, class: "btn btn-primary" %>
	</div>
</div>
<hr>
<%if @academies.present? %>
	<h2>Academy List</h2>
	<table class="table table-striped table-hover">
		<thead>
			<th>
				<strong>Index</strong>
			</th>
			<th>
				<strong>Academy Name</strong>
			</th>
			<th>
				<strong>Status</strong>
			</th>
			<th>
				<strong>Plan Name</strong>
			</th>
			<th>
				<strong>Registration limit</strong>
			</th>
			<th>
				<strong>Plan Price </strong>
			</th>
		</thead>
		<tbody>
			<% @academies.each_with_index do |academy, index| %>
				<tr>
					<td>
						<%= index+1 %>.
					</td>
					<td>
						<%= academy.name.humanize %>
					</td>
					<td>
						<%= academy.subscription.status %>
					</td>
					<td>
						<%= academy.subscription.plan.name %>
					</td>
					<td>
						<%= academy.subscription.plan.registration_limit %>
					</td>
					<td>
						<%= academy.subscription.plan.price %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>